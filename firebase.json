{
  "database": {
      "rules": "database.rules.json"
  },
  "hosting": [
      {
          "site": "servercrazy",
          "public": "build",
          "ignore": [
              "firebase.json",
              "**/.*",
              "**/node_modules/**"
          ],
          "rewrites": [
              {
                  "source": "**",
                  "destination": "/index.html"
              }
          ]
      }
  ]
}